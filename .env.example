# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Database Connection Strings (Prisma with Supabase)
# Use the "Connect" button in Supabase dashboard, select "ORMs" > "Prisma"
# DATABASE_URL: Connection pooling (port 6543) - used by API at runtime
# DIRECT_URL: Direct connection (port 5432) - used by Prisma migrations
DATABASE_URL=postgresql://postgres.yourproject:[password]@aws-0-us-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.yourproject:[password]@aws-0-us-west-1.pooler.supabase.com:5432/postgres

# Vite Frontend Environment Variables (must start with VITE_)
# Copy the same values from SUPABASE_URL and SUPABASE_ANON_KEY above
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Plaid Configuration (Sandbox)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_sandbox_secret
PLAID_ENV=sandbox

# Application
NODE_ENV=development
